<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suyf.mediadev">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".L1RenderImageSimpleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".L2RenderImageAdjustActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".L3RenderImageFilterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".L4RenderImageFBOActivity1"
            android:screenOrientation="portrait" />
        <activity
            android:name=".L4RenderImageFBOActivity2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".L5Camera1PreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".L5Camera2PreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".codec.MediaCodecActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".codec.MediaCodecESActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>